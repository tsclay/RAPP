{
    "extends": [
        "airbnb",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "singleQuote": true,
                "semi": true,
                "trailingComma": "none",
                "tabWidth": 2
            }
        ],
        "indent": [
            "error",
            2
        ],
        "react/jsx-one-expression-per-line": "off",
        "no-alert": "off",
        "no-useless-escape": "off",
        "no-console": "warn",
        "no-plusplus": "off",
        "spaced-comment": [
            "error",
            "always",
            {
                "exceptions": [
                    "=",
                    "-",
                    "/"
                ]
            }
        ]
    }
}